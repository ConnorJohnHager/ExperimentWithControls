<Window x:Name="Experiment_With_Controls" x:Class="ExperimentWithControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentWithControls"
        mc:Ignorable="d"
        Title="Experiment With Controls" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Enter a number" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18"/>
        <TextBlock x:Name="number" HorizontalAlignment="Center" TextWrapping="Wrap" Text="#" VerticalAlignment="Center" FontSize="24" Grid.Column="1"/>
        <TextBox x:Name="numberTextBox"  HorizontalAlignment="Left" Margin="10,49,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" FontSize="18" TextChanged="numberTextBox_TextChanged" PreviewTextInput="numberTextBox_PreviewTextInput"/>
        <RadioButton Content="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,50,0,0"/>
        <RadioButton Content="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,50,0,0"/>
        <RadioButton Content="3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,50,0,0"/>
        <RadioButton Content="4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,70,0,0"/>
        <RadioButton Content="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,70,0,0"/>
        <RadioButton Content="6" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,70,0,0"/>
        <ListBox x:Name="myListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Grid.Row="1" Width="100" Height="105">
            <ListBoxItem Content="1"/>
            <ListBoxItem Content="2"/>
            <ListBoxItem Content="3"/>
            <ListBoxItem Content="4"/>
            <ListBoxItem Content="5"/>
        </ListBox>


    </Grid>
</Window>
